.mark-resolved.complete-btn
	
	.btn-group
		%button.btn.btn-secondary.text-left.dropdown-action{:type=>"button", "data-toggle" => "dropdown"}
			.d-inline-block
				.status-option-color{:style=>"background-color:#0042FF;"}
			.d-inline-block
				To Do
			.d-inline-block.float-right
				%i.material-icons
					expand_more
		.dropdown-menu.dropdown-menu-right
			%button.dropdown-item.active{:type=>"button"} 
				.d-inline-block
					.status-option-color{:style=>"background-color:#0042FF;"}
				.d-inline-block
					To Do
			%button.dropdown-item{:type=>"button"} 
				.d-inline-block
					.status-option-color{:style=>"background-color:#FFAA00;"}
				.d-inline-block
					Needs review
			%button.dropdown-item{:type=>"button"} 
				.d-inline-block
					.status-option-color{:style=>"background-color:#FF4E4A;"}
				.d-inline-block
					Blocked
			%button.dropdown-item{:type=>"button"} 
				.d-inline-block
					.status-option-color{:style=>"background-color:#7F8FA4;"}
				.d-inline-block
					Cancelled
			.dropdown-divider
			%button.dropdown-item{:type=>"button"} 
				.d-inline-block
					.status-option-color{:style=>"background-color:#26C164;"}
				.d-inline-block
					Completed
		%a.btn.btn-secondary.btn-icon.filter-button{:href=>"#", "data-toggle"=>"tooltip", :title=>"Mark complete"}
			%span
				.material-icons
					check


